<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ListView
        android:id="@+id/lv_popup"
        style="@style/Widget.ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_E8"
        android:dividerHeight="1px"
        android:visibility="visible" >
    </ListView>

    <LinearLayout
        android:id="@+id/custom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="最小面积"
                android:textColor="#051B28"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_min_area"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:maxLength="6"
                android:inputType="number"
                android:background="@drawable/et_popup"
                android:textColor="#051B28"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="平方米"
                android:textColor="#81817F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="最大面积"
                android:textColor="#051B28"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_max_area"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:maxLength="6"
                android:inputType="number"
                android:background="@drawable/et_popup"
                android:textColor="#051B28"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="平方米"
                android:textColor="#81817F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:background="@drawable/btn_popup_bg"
                android:text="返回"
                android:textColor="@color/btn_popup_font_selector"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginLeft="17dp"
                android:background="@drawable/btn_popup_bg"
                android:text="确定"
                android:textColor="@color/btn_popup_font_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>