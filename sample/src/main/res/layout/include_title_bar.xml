<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigate_height"
    android:background="@color/navigate_bg" >

    <ImageButton
        android:id="@id/btn_navigate_left"
        android:layout_width="@dimen/navigate_height"
        android:layout_height="@dimen/navigate_height"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="7dp"
        android:onClick="gotoBack"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_back_selector" />

    <ImageButton
        android:id="@id/btn_navigate_right"
        android:layout_width="@dimen/navigate_height"
        android:layout_height="@dimen/navigate_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="7dp"
        android:visibility="invisible" />

    <TextView
        android:id="@id/navigate_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/btn_navigate_right"
        android:layout_toRightOf="@id/btn_navigate_left"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18_sp" />

</RelativeLayout>